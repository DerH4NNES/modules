{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{%
set media_classes = [
    'video',
    'clearfix',
]
%}
<article{{ attributes.addClass(media_classes) }}>
  {{ content.contextual_links }}

  <div class="video js-social-media-code"{{ content.field_media_video_embed_field|quickedit_attr }}></div>

  <div class="video__type-text">{{ 'Video'|t }}</div>
  {% if content.field_video_caption|field_value or content.field_copyright|field_value %}
  <div class="video__info">
    {% if content.field_video_caption|field_value %}
      <div class="video__caption"{{ content.field_video_caption|quickedit_attr }}>{{ content.field_video_caption|field_value }}</div>
    {% endif %}
    {% if content.field_copyright|field_value %}
      <div class="video__copyright">
        <span class="video__copyright-label"{{ content.field_copyright|quickedit_attr }}>{{ '&copy;'|trans }}</span>
        {{ content.field_copyright|field_value }}
      </div>
    {% endif %}
  </div>
  {% endif %}
  <div class="video__extra-info">
    {{ content.video_date }}
    <div class="video__duration"{{ content.field_media_duration|quickedit_attr }}>{{ content.field_media_duration|field_value }}</div>
  </div>
  {% if content.field_description %}
  <div class="video__description"{{ content.field_description|quickedit_attr }}>
    {{ content.field_description|field_value }}
  </div>
  {% endif %}
  {% if content.field_media_transcription %}
    <div class="video__transcription"{{ content.field_media_transcription|quickedit_attr }}>
      {{ content.field_media_transcription|field_value }}
    </div>
  {% endif %}
  {% if content.field_media_accessibility or content.field_media_language %}
  <div class="video__assets">
    {% if content.field_media_accessibility %}
      <div class="video__assets-accessibility"{{ content.field_media_accessibility|quickedit_attr }}>
        {{ content.field_media_accessibility|field_value }}
      </div>
    {% endif %}
    {% if content.field_media_language %}
      <div class="video__assets-language"{{ content.field_media_language|quickedit_attr }}>
        {{ content.field_media_language|field_value }}
      </div>
    {% endif %}
  </div>
  {% endif %}
  {% if content.field_tags|field_value %}
    <div class="tags"{{ content.field_tags|quickedit_attr }}>{{ content.field_tags|field_value }}</div>
  {% endif %}
</article>
